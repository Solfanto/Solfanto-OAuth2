<div class="columns sign-up">
  <div class="column is-three-fifths is-offset-one-fifth">
    
    <div class="field is-horizontal">
      <div class="field-label is-normal">
      </div>
      <div class="field-body">
        <div class="field">
          <h1 class="title">Sign Up</h1>
        </div>
      </div>
    </div>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <%= f.label :email, class: "label" %>
        </div>
        <div class="field-body">
          <div class="field">
            <p class="control has-icons-left">
              <%= f.email_field :email, autocomplete: "email", placeholder: "john@gmail.com", class: "input" %>
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
            </p>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <%= f.label :password, class: "label" %>
        </div>
        <div class="field-body">
          <div class="field">
            <p class="control has-icons-left">
              <%= f.password_field :password, autocomplete: "new-password", placeholder: raw("&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;"), class: "input" %>
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </p>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <%= f.label :password_confirmation, class: "label" %>
        </div>
        <div class="field-body">
          <div class="field">
            <p class="control has-icons-left">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: raw("&bull;&bull;&bull;&bull;&bull;&bull;&bull;&bull;"), class: "input" %>
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </p>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label">
          <!-- Left empty for spacing -->
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <%= f.submit "Sign Up", class: "button is-primary" %>
            </div>
          </div>
        </div>
      </div>
    
    <% end %>
  </div>
</div>
